<h1>make a song here</h1>
<%= form_with model: @song do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :length %>
  <%= f.text_field :length %> 
</div>

  <p>Select an Artist/Band</p>
  <div>
  <%= f.collection_select(:musician_id, Musician.all, :id, :name) %>
  </div>

  <p>Or create an Artist/Band</p>
  <div>
  <%= f.fields_for :musician do |musician_attributes|%>
  <%= musician_attributes.label :name %>
  <%= musician_attributes.text_field :name %>
  </div>
  <div>
  <%= musician_attributes.label :instrument %>
  <%= musician_attributes.text_field :instrument %>
  </div>
  <% end %>
  
  <p>Create an album or make it a single?</p>

  <%= f.collection_check_boxes(:album_id, Album.all, :id, :name) %>
  <div>
  <%= f.fields_for :album do |album_attributes|%>
  <%= album_attributes.label :name %>
  <%= album_attributes.text_field :name %>
  </div>
  <div>
  <%= album_attributes.label :release_date %>
  <%= album_attributes.text_field :release_date %>
  </div>
  <% end %>
  <br>
  <%= f.submit%>
<% end %>
